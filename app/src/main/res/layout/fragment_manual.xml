<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manual_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ManualFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.odos3d.slider.ui.components.StatusChipView
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:text="@string/dispositivo_no_seleccionado"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingBottom="8dp">

                <Button
                    android:id="@+id/btnPick"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/buscar_dispositivos" />

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/conectar" />

                <Button
                    android:id="@+id/btnDisconnect"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/desconectar" />
            </LinearLayout>

            <TextView
                android:id="@+id/tState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sin_conexion"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tLimits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:paddingBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_mm" />
                    <EditText
                        android:id="@+id/edtStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="1.0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feed_mm_min" />
                    <EditText
                        android:id="@+id/edtFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="300" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eje de jog"
                android:paddingBottom="4dp"/>

            <RadioGroup
                android:id="@+id/rgAxis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbAxisX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X" />
                <RadioButton
                    android:id="@+id/rbAxisY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y" />
                <RadioButton
                    android:id="@+id/rbAxisZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:paddingBottom="8dp">

                <Button android:id="@+id/btnMinus" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="-" />
                <Button android:id="@+id/btnPlus"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="+" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCancelJog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelar_jog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <Button android:id="@+id/btnHome"   android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/home"/>
                <Button android:id="@+id/btnUnlock" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/unlock"/>
                <Button android:id="@+id/btnReset"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/reset"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="8dp">

                <Button android:id="@+id/btnPause"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/pause"/>
                <Button android:id="@+id/btnResume" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/resume"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
